<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<br>
<div>
    <%= link_to "< Back to articles", articles_path %> | <%= link_to "Edit Article", edit_article_path(@article)%> | <%= link_to "Remove Article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
</div>
<br>
<% if @article.comments.length > 0 %>
<h2>Comments:</h2>
<% end %>

<% @article.comments.each do |comment| %>
    <p>
        <strong><%= comment.commenter %>: </strong>
        <%= comment.body %>
    </p>
<% end %>

<br>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>
